#parse("content/base/back/common/macro.vm")
<!DOCTYPE html>
<html lang="en">
#parse("content/base/back/common/head.vm")
<body style='overflow:scroll;overflow-x:hidden'>
	<div class="container bs-docs-container" style="width:100%;">
		<div class="row">
			<form role="form" class="form-inline" action="$!{basePath}/alipay/alipayAutoresponse.do?list" method="post"  id="formSubmit">
				<div  class="col-md-10" style="width:100%">
								<div class="panel panel-default">
								  <div class="panel-heading">关键字管理列表</div>
								  <div class="panel-body">
								  		<div class="search">
															 <div class="form-group col-sm-3">
															    <label for="keyWord" class="control-label col-sm-3 line34">关键字</label>
															     <div class="col-sm-8">
															    <input type="text" name="keyWord" id="keyWord" value="$!{alipayAutoresponse.keyWord}" class="form-control">
															  	</div>
															 </div>
											  <button type="submit" class="btn btn-primary">搜  索</button>
											  <div class="clearfix"></div>
								  		</div>
								  		<div id="legend">
								          <legend  class="le"><button type="button" class="btn btn-primary" onclick="doUrl('$!{basePath}/alipay/alipayAutoresponse.do?toAdd')" >新增</button></legend> 
								        </div>
								        <table class="table table-striped">
									        <thead>
													<th>关键字</th>
													<th>消息类型</th>
													<th>模板名称</th>
													<th>创建日期</th>
						                			<th>操作</th>
									        </thead>
									        <tobody>
									    	  #if($!{pageInfos})
								                #foreach($!{info} in $!{pageInfos})
									            	<tr>			
																	<td>$!{info.keyWord}</td>
																	<td>
																		#if($!{info.msgType} == 'news')
																			图文消息
																		#elseif($!{info.msgType} == 'text')
																			文本消息
																		#end
																		</td>
																	<td>$!{info.templateName}</td>
																	<td>$!dateTool.format("yyyy-MM-dd",$!{info.createDate})</td>
										                <td class="last">
							                			<a href="javascript:doUrl('$!{basePath}/alipay/alipayAutoresponse.do?toEdit&id=$!{info.id}')" >编辑</a>
							                			<a href="javascript:delData('$!{basePath}/alipay/alipayAutoresponse.do?doDelete&id=$!{info.id}')">删除</a>
						                				</td>
									           		</tr>
									             #end
									    	 #end
									         </tobody>
									    </table>
										<div class="text-right">
											<!--公用翻页代码-->
							                #set($attr='formSubmit')
							            	#showPageList($pageInfos $attr)
							                <!--END公用翻页代码-->
										</div>
								  </div>	
								</div>
				</div>  
				</form>
		</div>
	</div>
</body>
</html>